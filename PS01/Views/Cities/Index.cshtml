@model IEnumerable<PS01.Models.City>

@{
    ViewBag.Title = "Ciudades";
}

    <div class="masthead tabla">
        <div class="masthead-content">
            <div class="container">
                <h2 class="text-white-50">Ciudades</h2>

                <p>
                    @Html.ActionLink("Añadir ciudad", "Create", null, new { @class = "btn btn-sm btn-dark" })
                </p>

                <table class="table table-dark">
                    <tr>
                        <th>
                            Ciudad
                        </th>
                        <th>
                            Estado
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.State)
                            </td>
                            <td>
                                
                                @Html.ActionLink("Editar", "Edit", new { id = item.id }, new { @class = "btn btn-sm btn-outline-light" }) |
                                @Html.ActionLink("Detalles", "Details", new { id = item.id }, new { @class = "btn btn-sm btn-outline-light" }) |
                                @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new { @class = "btn btn-sm btn-outline-light" })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
               
