@model IEnumerable<PS01.Models.Evento>

@{
    ViewBag.Title = "Eventos";
}

    <div class="masthead tabla">
        <div class="masthead-content">
            <div class="container">
                <h2 class="text-white-50">Eventos</h2>

                <p>
                    @Html.ActionLink("Nuevo evento", "Create", null, new { @class = "btn btn-sm btn-dark" })
                </p>
                <table class="table table-dark">
                    <tr>
                        <th>
                            Evento
                        </th>
                        <th>
                            Fecha
                        </th>
                        <th>
                            Lugar
                        </th>
                        <th>
                            Ciudad
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Place)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.City.Name)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.id }, new { @class = "btn btn-sm btn-outline-light" }) |
                                @Html.ActionLink("Details", "Details", new { id = item.id }, new { @class = "btn btn-sm btn-outline-light" }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { @class = "btn btn-sm btn-outline-light" })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>            
                
